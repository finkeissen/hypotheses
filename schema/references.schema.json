{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HypothesisReference",
  "type": "object",
  "required": [
    "status",
    "kernel"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "active",
        "falsified",
        "archived"
      ]
    },
    "kernel": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string"
          }
        }
      }
    },
    "mms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string"
          }
        }
      }
    },
    "matrix": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string"
          }
        }
      }
    },
    "related_hypotheses": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}